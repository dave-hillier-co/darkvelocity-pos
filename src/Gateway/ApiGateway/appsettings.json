{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Yarp": "Information"
    }
  },
  "AllowedHosts": "*",
  "ReverseProxy": {
    "Routes": {
      "auth-route": {
        "ClusterId": "orleans-cluster",
        "Match": {
          "Path": "/api/auth/{**catch-all}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/api/auth" },
          { "PathPrefix": "/api" }
        ]
      },
      "locations-route": {
        "ClusterId": "orleans-cluster",
        "Match": {
          "Path": "/api/locations/{**catch-all}"
        }
      },
      "menu-route": {
        "ClusterId": "orleans-cluster",
        "Match": {
          "Path": "/api/menu/{**catch-all}"
        }
      },
      "orders-route": {
        "ClusterId": "orleans-cluster",
        "Match": {
          "Path": "/api/orders/{**catch-all}"
        }
      },
      "payments-route": {
        "ClusterId": "orleans-cluster",
        "Match": {
          "Path": "/api/payments/{**catch-all}"
        }
      },
      "hardware-route": {
        "ClusterId": "orleans-cluster",
        "Match": {
          "Path": "/api/hardware/{**catch-all}"
        }
      },
      "inventory-route": {
        "ClusterId": "orleans-cluster",
        "Match": {
          "Path": "/api/inventory/{**catch-all}"
        }
      },
      "procurement-route": {
        "ClusterId": "orleans-cluster",
        "Match": {
          "Path": "/api/procurement/{**catch-all}"
        }
      },
      "costing-route": {
        "ClusterId": "orleans-cluster",
        "Match": {
          "Path": "/api/costing/{**catch-all}"
        }
      },
      "reports-route": {
        "ClusterId": "orleans-cluster",
        "Match": {
          "Path": "/api/reports/{**catch-all}"
        }
      },
      "payment-gateway-route": {
        "ClusterId": "orleans-cluster",
        "Match": {
          "Path": "/api/gateway/{**catch-all}"
        }
      },
      "booking-route": {
        "ClusterId": "orleans-cluster",
        "Match": {
          "Path": "/api/booking/{**catch-all}"
        }
      },
      "labor-route": {
        "ClusterId": "orleans-cluster",
        "Match": {
          "Path": "/api/labor/{**catch-all}"
        }
      },
      "customers-route": {
        "ClusterId": "orleans-cluster",
        "Match": {
          "Path": "/api/customers/{**catch-all}"
        }
      },
      "giftcards-route": {
        "ClusterId": "orleans-cluster",
        "Match": {
          "Path": "/api/giftcards/{**catch-all}"
        }
      }
    },
    "Clusters": {
      "orleans-cluster": {
        "Destinations": {
          "orleans-silo": {
            "Address": "http://localhost:5200"
          }
        }
      }
    }
  }
}
